{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminPassword": {
            "type": "securestring",
            "defaultValue": "",
            "metadata": {
                "description": "ASSIGN THE ADMIN PASSWORD AT RUNTIME -- DO NOT SAVE IN TEMPLATE"
            }
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "sfcadmin"
        },
        "environment": {
            "type": "string",
            "defaultValue": "dev",
            "allowedValues": [
                "prod",
                "dev",
                "sandbox"
            ]
        },
        "subnetPrefixName": {
            "type": "string",
            "defaultValue": "fwtest1"
        }
    },
    "functions": [],
    "variables": {
        "tags": {
            "Department": "it",
            "Team": "networking",
            "Environment": "[parameters('environment')]",
            "Application": "[parameters('subnetPrefixName')]"
        }
    },
    "resources": [
        {
            "name": "dc-server-nic",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
            ],
            "tags": "[variables('tags')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "/subscriptions/6081cfb9-7cb9-4b84-8be8-337fdcac59f6/resourceGroups/sfc-fwtest1-sandbox-rg/providers/Microsoft.Network/virtualNetworks/fwtest1-sandbox-vnet/subnets/dc-subnet"                           }
                        }
                    }
                ]
            }
        },
        {
            "name": "dc-server",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2021-03-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', 'dc-server-nic')]"
            ],
            "tags": "[variables('tags')]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_DS1_v2"
                },
                "osProfile": {
                    "computerName": "dc1",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2022-datacenter-azure-edition-smalldisk",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "dc-server-OSDisk",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces','dc-server-nic')]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "https://aw3lpaltest016w7viyhesa.blob.core.windows.net/"
                    }
                },
                "licenseType": "Windows_Server"
            }
        }
    ],
    "outputs": {}
}